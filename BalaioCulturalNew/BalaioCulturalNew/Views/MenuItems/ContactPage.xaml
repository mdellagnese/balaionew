<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             xmlns:templates="clr-namespace:BalaioCulturalNew.Views.Templates"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="BalaioCulturalNew.Views.MenuItems.ContactPage"
             Title="Contato">
    
    <StackLayout BackgroundColor="{StaticResource BalaioBlue}" Spacing="10">
        <templates:HeaderMenu />

        <Label Style="{StaticResource LabelGreen}"
               Text="Quer compartilhar algo com a gente?"
               FontSize="Default"
               HorizontalOptions="Center"></Label>

        <Label Style="{StaticResource LabelGreen}"
               Text="Mande uma mensagem :)"
               FontSize="Default"
               HorizontalOptions="Center" Margin="0,0,0,5"></Label>
        
        <controls:ExtendedEditor BackgroundColor="{Binding BalaioBlue}"
                TextColor="White" HeightRequest="150"/>

        <controls:ExtendedButton Style="{StaticResource NewBlueButton}"
                Text="Enviar"/>

    </StackLayout>
</ContentPage>